<Window x:Class="TeardownTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeardownTools"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="TeardownTools" Height="800" Width="1100"
        WindowStyle="None" AllowsTransparency="True"
        Background="#FF2D2D2D" Loaded="Window_Loaded"
        >

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3B3B3B"/>
            <Setter Property="Margin" Value="20, 0"/>
            <Setter Property="Foreground" Value="#FFC1C1C1"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="#FF0A0A0A" BorderThickness="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2D2D2D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFC1C1C1"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style TargetType="ComboBox">
        </Style>
        <Style TargetType="Image">
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFC1C1C1"/>
        </Style>
        <Style TargetType="ListBox">
        </Style>
        <Style TargetType="StackPanel">
        </Style>
        <Style TargetType="Slider">
        </Style>
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="#FF0A0A0A"/>
            <Setter Property="BorderThickness" Value="4"/>
        </Style>

        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button" x:Key="ClickableIcon" >
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{x:Null}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.6"/>
                    <Setter Property="Background" Value="{x:Null}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="15*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" x:Name="TitleBar" MouseDown="TitleBar_MouseDown">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="70" />
            </Grid.ColumnDefinitions>

            <Label Content="TeardownTools" FontSize="50" VerticalAlignment="Center" FontFamily="Rockwell" />

            <Button Grid.Column="1" Style="{StaticResource ClickableIcon}" x:Name="MinimizeButton" Click="MinimizeButton_Click">
                <Image x:Name="MinimizeImage" Source="images/minimize.png" />
            </Button>
            <Button Grid.Column="2" Style="{StaticResource ClickableIcon}" x:Name="MaximizeButton" Click="MaximizeButton_Click">
                <Image x:Name="MaximizeImage" Source="images/maximize.png" />
            </Button>
            <Button Grid.Column="3" Style="{StaticResource ClickableIcon}" x:Name="CloseButton" Click="CloseButton_Click">
                <Image x:Name="CloseImage" Source="images/close.png" />
            </Button>
        </Grid>

        
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="26*" />
                <ColumnDefinition Width="10*" />
            </Grid.ColumnDefinitions>

            <ListBox Grid.Column="0" x:Name="ModItemsControl" Background="#464646" BorderBrush="#FF0A0A0A" BorderThickness="4" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#FF0A0A0A" BorderThickness="4">
                            <StackPanel Margin="20, 5, 0, 5">
                                <Label Content="{Binding Name}" Foreground="#FFC1C1C1" FontSize="28" FontWeight="Bold" />
                                <Label Content="{Binding ShortDescription}" Foreground="#FFC1C1C1" FontSize="17" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Border Grid.Column="1" Margin="15, 0, 0, 0">
                <DockPanel  Background="#3B3B3B">
                    <Label DockPanel.Dock="Top" x:Name="Title" FontSize="30" FontWeight="Bold" Content="Title" HorizontalAlignment="Center" />

                    <Border DockPanel.Dock="Top" Margin="10, 0">
                        <Image x:Name="Preview" Source="images/placeholder.png" />
                    </Border>

                    <TextBlock DockPanel.Dock="Top" x:Name="Description" Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." Margin="15" />

                    <TextBlock DockPanel.Dock="Top" x:Name="Warning" Text="Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip."  Margin="35, 0, 15, 15" Foreground="#B83A3A" />

                    <Grid  DockPanel.Dock="Bottom">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Style="{StaticResource ClickableIcon}" x:Name="InstallButton" VerticalAlignment="Bottom" Margin="0, 0, 0, 20">
                            <Image Source="images/install.png" />
                        </Button>
                        <Button Grid.Column="2" Style="{StaticResource ClickableIcon}" x:Name="UninstallButton" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Margin="0, 0, 0, 20" IsEnabled="False" >
                            <Image Source="images/uninstall.png" />
                        </Button>
                    </Grid>
                </DockPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="1" Grid.Column="0" Content="Uninstall All" />

            <Label Grid.Row="1" Grid.Column="3" Content="V0.1" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="18" />
        </Grid>
    </Grid>
</Window>
